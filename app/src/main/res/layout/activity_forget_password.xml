<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context="com.inception.harmeetkaur.notessharing.Forget_password">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:hint="Enter Email-id"
        android:padding="5dp"
        android:id="@+id/email_new"
        android:textColor="#000"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@id/image"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_new"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Get Reset Link"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#1f2b78"
        android:textColor="#fff"
        android:onClick="reset_pass"/>
</RelativeLayout>
