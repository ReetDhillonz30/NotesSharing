<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inception.harmeetkaur.notessharing.join_login">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#304ca7"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="5dp"
        android:id="@+id/arrow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="25dp"
        android:layout_marginTop="3dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/arrow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:textColor="#fff"
        android:layout_marginTop="3dp"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi."
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join your class group"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
              />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="17dp"
                android:textColor="#000"
                android:background="@null"
                android:padding="10dp"/>
               <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
          />
            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Group name"
                android:textColor="#000"
                android:padding="10dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Password"
                android:textColor="#000"
                android:textSize="17dp"
                android:padding="10dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+91"
                android:textColor="#000"
                android:textSize="17dp"
                android:padding="10dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Enter Your Name"
                android:imeOptions="actionNext"
                android:padding="11dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Class group name"
                android:maxLines="1"
                android:padding="11dp"
                android:imeOptions="actionNext"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Password Of Group"
                android:imeOptions="actionNext"
                android:padding="11dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Mobile Number"
                android:imeOptions="actionDone"
                android:padding="11dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have password ? Create class group"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        />
</LinearLayout>
